                                    p.shareholders__description Chubb Russia Investments Limited (UK), 100% owned by Chubb Limited (Switzerland) 
                                .shareholders__item(style="width: 27.38%") 
                                    span.shareholders__value 27,38 %
                                    p.shareholders__description Catlin Underwriting Agencies Limited (UK), 100% owned by AXA SA (France)
                                .shareholders__item(style="width: 50.32%")  
                                    span.shareholders__value 50,32 %
                                    p.shareholders__description Руководство общества
                            a(href="#", class="shareholders__btn btn btn--white") 
                                span Перейти к истории акционеров
                                svg(class="btn__icon")
                                    use(xlink:href="img/dist/sprite.svg#icon-arrow-more")

                    .about__wrapper 
                        h2 Структура компании

